<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVehicleActivity">

    <TextView
        android:id="@+id/brandTextView_addVehicleActivity4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Model:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="480dp" />

    <TextView
        android:id="@+id/brandTextView_addVehicleActivity3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Model:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="400dp" />

    <EditText
        android:id="@+id/ownerEditText_addVehicleActivity2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Tesla"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/brandTextView_addVehicleActivity"
        app:layout_constraintTop_toBottomOf="@+id/ownerEditText_addVehicleActivity" />

    <EditText
        android:id="@+id/ownerEditText_addVehicleActivity3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Tesla"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/brandTextView_addVehicleActivity2"
        app:layout_constraintTop_toBottomOf="@+id/ownerEditText_addVehicleActivity2" />

    <EditText
        android:id="@+id/ownerEditText_addVehicleActivity4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Tesla"
        android:inputType="textPersonName"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="400dp" />

    <EditText
        android:id="@+id/ownerEditText_addVehicleActivity5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Tesla"
        android:inputType="textPersonName"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="480dp" />

    <Button
        android:id="@+id/goBackButton_addVehicleActivity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:onClick="goBack"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/addVehicleTextView_addVehicleActivity"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace"
        android:text="Add Vehicle"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ownerEditText_addVehicleActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ownerTextView_addVehicleActivity"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/ownerTextView_addVehicleActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Owner:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeTextView_addVehicleActivity" />

    <TextView
        android:id="@+id/typeTextView_addVehicleActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Type:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addVehicleTextView_addVehicleActivity" />

    <TextView
        android:id="@+id/brandTextView_addVehicleActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Brand:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerTextView_addVehicleActivity" />

    <TextView
        android:id="@+id/brandTextView_addVehicleActivity2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Model:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandTextView_addVehicleActivity" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addVehicleTextView_addVehicleActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>