<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherSignUpActivity">

    <Button
        android:id="@+id/goBackButton_teacherSignUpActivity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:onClick="goBack"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signUpButton_teacherSignUpActivity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:onClick="signUp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText_teacherSignUpActivity" />

    <EditText
        android:id="@+id/schoolTitleEditEdit_teacherSignUpActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Headmaster"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/schoolTitleTextView_teacherSignUpActivity"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText_teacherSgnUpActivity" />

    <EditText
        android:id="@+id/emailEditText_teacherSignUpActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="teacher@gmail.com"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/emailTextView_teacherSignUpActivity"
        app:layout_constraintTop_toBottomOf="@+id/schoolTitleEditEdit_teacherSignUpActivity" />

    <EditText
        android:id="@+id/passwordEditText_teacherSignUpActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="ABC123"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/passwordTextView_teacherSignUpActivity"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText_teacherSignUpActivity" />

    <EditText
        android:id="@+id/nameEditText_teacherSgnUpActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/nameTextView_teacherSignUpActivity"
        app:layout_constraintTop_toBottomOf="@+id/signUpTextView_teacherSignUpActivity" />

    <TextView
        android:id="@+id/nameTextView_teacherSignUpActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Name:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpTextView_teacherSignUpActivity" />

    <TextView
        android:id="@+id/schoolTitleTextView_teacherSignUpActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Title:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView_teacherSignUpActivity" />

    <TextView
        android:id="@+id/emailTextView_teacherSignUpActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Email:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schoolTitleTextView_teacherSignUpActivity" />

    <TextView
        android:id="@+id/passwordTextView_teacherSignUpActivity"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Password:"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView_teacherSignUpActivity" />

    <TextView
        android:id="@+id/signUpTextView_teacherSignUpActivity"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>